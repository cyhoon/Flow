<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ihello.anti.activity.MainActivity"
    tools:layout_editor_absoluteY="81dp">

    <Button
        android:id="@+id/schoolMeals"
        android:layout_width="160dp"
        android:layout_height="78dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="368dp"
        android:onClick="goSchoolMealsIntent"
        android:text="급식 보러가기"
        app:layout_constraintEnd_toStartOf="@+id/button2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/signInBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="goSignInIntent"
        android:text="로그인 하기"
        tools:layout_editor_absoluteX="28dp"
        tools:layout_editor_absoluteY="74dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="goSignUpIntent"
        android:text="회원가입"
        tools:layout_editor_absoluteX="28dp"
        tools:layout_editor_absoluteY="16dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="160dp"
        android:layout_height="78dp"
        android:layout_marginEnd="28dp"
        android:layout_marginTop="368dp"
        android:text="심야자율 학습 신청"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="goHomeIntent"
        android:text="홈으로 가기"
        tools:layout_editor_absoluteX="28dp"
        tools:layout_editor_absoluteY="172dp" />
</android.support.constraint.ConstraintLayout>
